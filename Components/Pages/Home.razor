@page "/"

 @inject ISnackbar Snackbar

<PageTitle>List of Employee</PageTitle>

<style>

    .view-list-btn {
        background-color: #005ce6;
        border: none;
        border-radius: 5px;
        color: white;
        padding: 8px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
    }

    .view-list-btn:hover {
            background-color: #0066ff;
            color: white;
            box-shadow: 0 2px 6px 0 rgba(0,0,0,0.24),0 3px 7px 0 rgba(0,0,0,0.19);
        }

    .home-title {
        font-size: 80px;
    }

    .title {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn-home {
        padding-left:47px;
        padding-right:44px;
    }
    .btn-drivers-sched{
        margin-left: 15px;
    }

    .home-buttons{
        display:flex;
        flex-direction:row;
        align-items:center;
        margin-left: 16px;
        margin-top:20px;
    }

    .NavBar {
        background-color: #006680;
    }

    .SideBar {
        background-color: #008fb3;
        color: white;
    }
    .main-layout{
        background-image:url(img/bg3.png);
        background-repeat:no-repeat;
        background-position:center;
        background-size:cover;
        height:1000px;
    }

</style>

<MudLayout>
    <MudAppBar Elevation="1" Class="NavBar">
        <MudInputLabel>Employee Management System</MudInputLabel>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Target="_blank" />
    </MudAppBar>
    <MudMainContent Class="pt-16 px-16 main-layout">
        <MudGrid>
            <MudItem xs="12" sm="6">
                <div>
                    <MudText Class="txt-title" 
                    Typo="Typo.h1" 
                    Style="margin-top:265px; color: white;text-shadow: 2px 2px 10px #000000; margin-left:9px;">
                    List of Employee
                    </MudText>

                    <MudText Class="ma-4" 
                    Style=" color: white; text-shadow: 2px 2px 10px #000000;">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, 
                        sed do eiusmod tempor incididunt ut labore et dolore magna 
                        aliqua. Ut enim ad minim veniam, quis nostrud exercitation 
                        ullamco laboris nisi ut aliquip ex ea commodo consequat. 
                        Duis aute irure dolor in reprehenderit in voluptate velit 
                        esse cillum dolore eu fugiat nulla pariatur. Excepteur sint 
                        occaecat cupidatat non proident, sunt in culpa qui officia 
                        deserunt mollit anim id est laborum.
                    </MudText>
                </div>
                <div class="home-buttons">
                    <div>
                        <MudButton Variant="Variant.Outlined" EndIcon="@Icons.Material.Filled.List" Color="Color.Primary" @onclick="@(() => Snackbar.Add("You can now view the list", Severity.Success))" Class="btn-home" Href="/Employees" Style="color:white; border:1px solid white;">View List</MudButton>
                    </div>
                    <div>
                        <MudButton Variant="Variant.Outlined" EndIcon="@Icons.Material.Filled.DirectionsCar" Color="Color.Primary" @onclick="@(() => Snackbar.Add("Driver Schedule", Severity.Success))" Class="btn-drivers-sched" Href="/driver-schedule" Style="color:white; border:1px solid white;">Driver's Schedule</MudButton>
                    </div>
                </div>
            </MudItem>
            <MudItem xs="12" sm="6">
               
            </MudItem>
        </MudGrid>
    </MudMainContent>
</MudLayout>


@code{
    bool open = false; 

    void ToggleDrawer()
    {
        open = !open;
    }
}
